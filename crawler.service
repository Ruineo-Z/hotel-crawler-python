[Unit]
Description=Python APScheduler Crawler
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/etc/local/python-crawler/hotel-crawler-python
ExecStart=/bin/bash /root/etc/local/python-crawler/hotel-crawler-python/run.sh
Restart=always
RestartSec=10
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
